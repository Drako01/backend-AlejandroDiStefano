<div class="iniciodesession">
    <div class="container login">
        <h1>Registro de usuario por Administrador</h1>
        <form action="/signupadmin" method="POST">
            <div class="form-group hidden">
                <label for="first_name">Foto de Perfil:</label>
                <input type="text" class="form-control" id="photo" name="photo"
                    value="/img/profile/photo-1691632024096.png" required>
            </div>
            <div class="form-group">
                <label for="first_name">Nombre:</label>
                <input type="text" class="form-control" id="first_name" name="first_name" required>
            </div>
            <div class="form-group">
                <label for="last_name">Apellido:</label>
                <input type="text" class="form-control" id="last_name" name="last_name" required>
            </div>
            <div class="form-group">
                <label for="email">Correo electrónico:</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="number">Teléfono:</label>
                <input type="text" class="form-control" id="phone" name="phone" required>
            </div>
            <div class="form-group">
                <label for="number">Edad:</label>
                <input type="number" class="form-control" id="age" name="age" required>
            </div>
            <div class="form-group">
                <label for="password">Contraseña:</label>
                <div class="password-input">
                    <input type="password" class="form-control" id="password" name="password" required>
                    <span class="toggle-password" onclick="togglePasswordVisibility()"><i class="fa fa-eye"></i></span>
                </div>
            </div>
            <div class="form-group">
                <label for="password">Reingrese la Contraseña:</label>
                <input type="password" class="form-control" id="repassword" name="repassword" required>
            </div>
            <div class="form-group">
                <label for="role">Rol</label>
                <select id="role" name="role" class="form-control">
                    <option value="admin" name="admin" selected>Admin</option>
                    <option value="user" name="user">User</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
        <a href="/users" class="btn btn-success">Volver</a>
    </div>
</div>
<script src="/js/index.js"></script>