<div class="text-center">
    <h2>Editar Producto</h2>
</div>
<div class="container text-center index_div">
    <h1>Producto con ID: {{ producto._id }} </h1>
</div>
<section class="products">
    <div id="product-container" class="container products">
        <div class="card" style="width: 18rem;">
            <form method="post" action="/productseditbyid/{{ producto._id }}" enctype="multipart/form-data">
                <input type="hidden" name="_method" value="PUT">
                <div class="card-body">
                    <div class="form-group">
                        <label for="title">Nombre</label>
                        <input type="text" class="form-control" placeholder="" id="title" name="title" value="{{ producto.title }}" required>
                    </div>
                    <div class="form-group">
                        <label for="category">Categoría</label>
                        <input type="text" class="form-control" id="category" name="category" value="{{ producto.category }}" required>
                    </div>
                    <div class="form-group">
                        <label for="thumbnail">Foto</label>
                        <input type="file" class="form-control" id="thumbnail" name="thumbnail" >
                    </div>
                    <div class="form-group">
                        <label for="size">Tamaño</label>
                        <input type="text" class="form-control" id="size" name="size" value="{{ producto.size }}" required>
                    </div>
                    <div class="form-group">
                        <label for="code">Código</label>
                        <input type="text" class="form-control" id="code" name="code" value="{{ producto.code }}" required>
                    </div>
                    <div class="form-group">
                        <label for="description">Descripción</label>
                        <textarea class="form-control" id="description" name="description" rows="3" required>{{ producto.description }}</textarea>
                    </div>
                    <div class="form-group">
                        <label for="price">Precio</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">$</span>
                            </div>
                            <input type="number" class="form-control" id="price" name="price" value="{{ producto.price }}" required>
                            <div class="input-group-append">
                                <span class="input-group-text">.00</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="stock">Stock</label>
                        <input type="number" class="form-control" id="stock" name="stock" value="{{ producto.stock }}" required>
                    </div>
                    <input type="hidden" value="{{user}}">
                    <div class="form-group align-center text-center">
                        <button type="submit" class="btn btn-success">Guardar cambios</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
