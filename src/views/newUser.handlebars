<div class="iniciodesession">
    <div class="container login">
        <h1>Registro de usuario por Administrador</h1>
        <form action="/users/newUser" method="POST">
            <div class="form-group">
                <label for="first_name">Nombre:</label>
                <input type="text" class="form-control" id="first_name" name="first_name" >
            </div>
            <div class="form-group">
                <label for="last_name">Apellido:</label>
                <input type="text" class="form-control" id="last_name" name="last_name" >
            </div>
            <div class="form-group">
                <label for="email">Correo electrónico:</label>
                <input type="email" class="form-control" id="email" name="email" >
            </div>
            <div class="form-group">
                <label for="number">Teléfono:</label>
                <input type="text" class="form-control" id="phone" name="phone" >
            </div>
            <div class="form-group">
                <label for="number">Edad:</label>
                <input type="number" class="form-control" id="age" name="age" >
            </div>            
            <div class="form-group">
                <label for="password">Contraseña:</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <div class="form-group">
                <label for="password">Reingrese la Contraseña:</label>
                <input type="password" class="form-control" id="repassword" name="repassword" required>
            </div>
            <div class="form-group">
                <label for="role">Rol</label>
                <select id="role" name="role" class="form-control">
                    <option value="admin" name="admin" selected>Admin</option>
                    <option value="user" name="user">User</option>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
        <a href="/users"  class="btn btn-success">Volver</a>
    </div>
</div>
